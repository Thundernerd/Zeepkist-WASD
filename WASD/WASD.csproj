        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <RootNamespace>TNRD.Zeepkist.WASD</RootNamespace>
        <Product>WASD</Product>
    </PropertyGroup>

    <ItemGroup>
